/* Stepper */
.appui-stepper {
    display: flex;
    flex-direction: row;
    align-self: flex-start;
    border-radius: var(--appui-alias-control-border-radius);
    flex-shrink: 0;
}

.appui-stepper__button {
    background-color: var(--appui-base-100);
    border-width: var(--appui-alias-control-border-width);
    /*border-style: var(--appui-control-border-style);*/
    border-color:  var(--appui-base-400);
    border-top-left-radius: var(--appui-alias-control-border-radius); /*border-start-start-radius: var(--appui-alias-control-border-radius);*/
    border-bottom-left-radius: var(--appui-alias-control-border-radius); /*border-end-start-radius: var(--appui-alias-control-border-radius);*/
    border-top-right-radius: 0; /*border-start-end-radius: 0;*/
    border-bottom-right-radius: 0; /*border-end-end-radius: 0;*/
    border-right-width: 0; /*border-inline-end-width: 0;*/
    cursor: var(--appui-alias-control-cursor-pointer);
    color: var(--appui-foregrounds-100);
}

.appui-stepper__button.unity-last-child /*.appui-stepper__button:last-child*/ {
    border-top-left-radius: 0; /*border-start-start-radius: 0;*/
    border-bottom-left-radius: 0; /*border-end-start-radius: 0;*/
    border-top-right-radius: var(--appui-alias-control-border-radius); /*border-start-end-radius: var(--appui-alias-control-border-radius);*/
    border-bottom-right-radius: var(--appui-alias-control-border-radius); /*border-end-end-radius: var(--appui-alias-control-border-radius);*/
    border-right-width: var(--appui-alias-control-border-width); /*border-inline-end-width: var(--appui-alias-control-border-width);*/
    border-left-width: 0; /*border-inline-start-width: 0;*/
    display: flex;
    flex-direction: row;
    align-items: center;
}

.appui-stepper--size-s .appui-stepper__button {
    width: var(--appui-sizing-400);
    height: var(--appui-sizing-400);
}

.appui-stepper--size-m .appui-stepper__button {
    width: var(--appui-sizing-500);
    height: var(--appui-sizing-500);
}

.appui-stepper--size-l .appui-stepper__button {
    width: var(--appui-sizing-600);
    height: var(--appui-sizing-600);
}

.appui-stepper__button:focus {
    background-color: var(--appui-base-50);
    border-color: var(--appui-base-400);
    color: var(--appui-foregrounds-200);
}

.appui-stepper__button:hover {
    background-color: var(--appui-base-200);
    border-color: var(--appui-base-500);
}

.appui-stepper.keyboard-focus {
    /* converted from : outline-width: var(--appui-alias-control-outline-width); */
    --outline-width: var(--appui-alias-control-outline-width);
    /* converted from : outline-color: var(--appui-alias-control-outline-color); */
    --outline-color: var(--appui-alias-control-outline-color);
    /* converted from : outline-offset: var(--appui-alias-control-outline-offset); */
    --outline-offset: var(--appui-alias-control-outline-offset);
    /* converted from : outline-style: var(--appui-alias-control-outline-style); */
}

.appui-stepper__button:active {
    background-color: var(--appui-base-50);
    border-color: var(--appui-base-400);
    color: var(--appui-foregrounds-200);
}

.appui-stepper__button:disabled {
    background-color: var(--appui-base-100);
    border-color: var(--appui-base-300);
    cursor: var(--appui-alias-control-cursor-disabled);
    color: var(--appui-foregrounds-25);
}

.appui-stepper__iconcontainer {
    display: flex;
    flex-grow: 1;
    flex-shrink: 0;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 100%;
}

.appui-stepper--size-s .appui-icon {
    height: var(--appui-sizing-300);
    width: var(--appui-sizing-300);
}
