/* Button */
.appui-button {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    border-width: var(--appui-alias-control-border-width);
    /* Nothing */ /* converted from : border-style: var(--appui-control-border-style); */
    border-radius: var(--appui-alias-control-border-radius);
    cursor: var(--appui-alias-control-cursor-pointer);
    font-size: var(--appui-font-sizes-body-sm);
    background-color: var(--appui-base-100);
    border-color: var(--appui-base-400);
    color: var(--appui-foregrounds-100);
    flex-shrink: 0;
}

.appui-button__leadingcontainer {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin-left: var(--appui-alias-control-gap-md); /* todo remove this when gap will be supported */
}

.appui-button__titlecontainer {
    display: flex;
    flex-grow: 1;
    flex-direction: column;
    align-items: center;
    /* Nothing */ /* converted from : gap: var(--appui-control-semi-gap); */
    margin-left: var(--appui-alias-control-gap-md); /* converted from : margin-inline-start: var(--appui-alias-control-gap-md); */
    margin-right: var(--appui-alias-control-gap-md); /* converted from : margin-inline-end: var(--appui-alias-control-gap-md); */
}

.appui-button__trailingcontainer {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin-right: var(--appui-alias-control-gap-md); /* todo remove this when gap will be supported */
}

.appui-button__title {
    -unity-font-style: bold; /* converted from : font-weight: var(--appui-global-font-weight-semi-bold); */
}

.appui-button__subtitle {
    font-size: var(--appui-font-sizes-body-xs);
    color: var(--appui-foregrounds-50);
}

.appui-button .appui-icon {
    --unity-image-tint-color: var(--appui-foregrounds-100); /* converted from : fill: inherit; */
}

.appui-button--size-s {
    min-height: var(--appui-alias-control-sizing-sm-height);
    min-width: var(--appui-alias-control-sizing-sm-height);
    padding-top: var(--appui-spacing-25);
    padding-bottom: var(--appui-spacing-25);
}

.appui-button--size-m {
    min-height: var(--appui-alias-control-sizing-md-height);
    min-width: var(--appui-alias-control-sizing-md-height);
    padding-top: var(--appui-spacing-50);
    padding-bottom: var(--appui-spacing-50);
}

.appui-button--size-l {
    min-height: var(--appui-alias-control-sizing-lg-height);
    min-width: var(--appui-alias-control-sizing-lg-height);
    padding-top: var(--appui-spacing-100);
    padding-bottom: var(--appui-spacing-100);
}

.appui-button--icon-only.appui-button--size-s {
    min-height: auto;
    min-width: auto;
    height: var(--appui-alias-control-sizing-sm-height);
    width: var(--appui-alias-control-sizing-sm-height);
}

.appui-button--icon-only.appui-button--size-m {
    min-height: auto;
    min-width: auto;
    height: var(--appui-alias-control-sizing-md-height);
    width: var(--appui-alias-control-sizing-md-height);
}

.appui-button--icon-only.appui-button--size-l {
    min-height: auto;
    min-width: auto;
    height: var(--appui-alias-control-sizing-lg-height);
    width: var(--appui-alias-control-sizing-lg-height);
}

.appui-button--icon-only {
    padding: 0;
}

.appui-button--icon-only > .appui-button__leadingcontainer {
    margin-left: 0; /* todo remove this when gap will be supported */
}

.appui-button--accent {
    background-color: var(--appui-accent-100);
    border-width: 0;
}

.appui-button--destructive {
    border-width: 0;
    background-color: var(--appui-destructive-100);
}

.appui-button--quiet {
    border-color: rgba(0, 0, 0, 0);
    background-color: rgba(0, 0, 0, 0);
}

.appui-button--accent,
.appui-button--destructive {
    color: white;
}

.appui-button--accent.appui-button--quiet,
.appui-button--destructive.appui-button--quiet {
    color: var(--appui-foregrounds-100);
}

.appui-button--accent .appui-button__subtitle,
.appui-button--destructive .appui-button__subtitle {
    color: var(--appui-color-transparent-white-600);
}

.appui-button--accent.appui-button--quiet .appui-button__subtitle,
.appui-button--destructive.appui-button--quiet .appui-button__subtitle {
    color: var(--appui-foregrounds-50);
}

.appui-button--accent .appui-icon,
.appui-button--destructive .appui-icon {
    --unity-image-tint-color: var(--appui-color-white); /* converted from : fill: var(--appui-color-white); */
}

.appui-button--accent.appui-button--quiet .appui-icon,
.appui-button--destructive.appui-button--quiet .appui-icon {
    --unity-image-tint-color: var(--appui-foregrounds-100); /* converted from : fill: var(--appui-foregrounds-100); */
}

.appui-button:hover {
    background-color: var(--appui-base-200);
    border-color: var(--appui-base-500);
    color: var(--appui-foregrounds-200);
}

.appui-button--accent:hover {
    background-color: var(--appui-accent-50);
    color: var(--appui-color-white);
}

.appui-button--destructive:hover {
    background-color: var(--appui-destructive-50);
    color: var(--appui-color-white);
}

.appui-button:focus {
    background-color: var(--appui-base-50);
    border-color: var(--appui-base-400);
    color: var(--appui-foregrounds-200);
}

.appui-button--accent:focus {
    background-color: var(--appui-accent-50);
    color: var(--appui-color-white);
}

.appui-button--accent:focus .appui-icon {
    --unity-image-tint-color: var(--appui-color-white); /* converted from : fill: var(--appui-color-white); */
}

.appui-button--destructive:focus {
    background-color: var(--appui-destructive-50);
    color: var(--appui-color-white);
}

.appui-button--destructive:focus .appui-icon {
    --unity-image-tint-color: var(--appui-color-white); /* converted from : fill: var(--appui-color-white); */
}

.appui-button.keyboard-focus {
    /* converted from : outline-width: var(--appui-alias-control-outline-width); */
    --outline-width: var(--appui-alias-control-outline-width);
    /* converted from : outline-color: var(--appui-alias-control-outline-color); */
    --outline-color: var(--appui-alias-control-outline-color);
    /* converted from : outline-offset: var(--appui-alias-control-outline-offset); */
    --outline-offset: var(--appui-alias-control-outline-offset);
    /* converted from : outline-style: var(--appui-alias-control-outline-style); */
}

.appui-button:active {
    background-color: var(--appui-base-50);
    border-color: var(--appui-base-400);
    color: var(--appui-foregrounds-200);
}

.appui-button--accent:active {
    background-color: var(--appui-accent-25);
    color: var(--appui-color-white);
}

.appui-button--destructive:active {
    background-color: var(--appui-destructive-25);
    color: var(--appui-color-white);
}

.appui-button--accent.keyboard-focus .appui-icon,
.appui-button--destructive.keyboard-focus .appui-icon,
.appui-button--accent:hover .appui-icon,
.appui-button--destructive:hover .appui-icon,
.appui-button--accent:active .appui-icon,
.appui-button--destructive:active .appui-icon {
    --unity-image-tint-color: var(--appui-color-white); /* converted from : fill: var(--appui-color-white); */
}

.appui-button:disabled {
    background-color: var(--appui-base-100);
    border-color: var(--appui-base-300);
    cursor: var(--appui-alias-control-cursor-disabled);
    color: var(--appui-foregrounds-25);
}

.appui-button--accent:disabled {
    background-color: var(--appui-base-100);
    border-color: var(--appui-base-300);
    cursor: var(--appui-alias-control-cursor-disabled);
    color: var(--appui-foregrounds-25);
}

.appui-button--destructive:disabled {
    background-color: var(--appui-base-100);
    border-color: var(--appui-base-300);
    cursor: var(--appui-alias-control-cursor-disabled);
    color: var(--appui-foregrounds-25);
}

.appui-button:disabled .appui-icon {
    --unity-image-tint-color: var(--appui-foregrounds-25); /* converted from : fill: var(--appui-foregrounds-25); */
}

.appui-button--accent:disabled .appui-icon,
.appui-button--destructive:disabled .appui-icon {
    --unity-image-tint-color: var(--appui-foregrounds-25); /* converted from : fill: var(--appui-foregrounds-25); */
}

.appui-button:disabled .appui-button__subtitle {
    color: var(--appui-foregrounds-25);
}