/* ActionGroup */
.appui-actiongroup {
    display: flex;
    flex-direction: row;
    flex-shrink: 0;
    flex-grow: 1;
    justify-content: flex-start;
    align-items: stretch;
    /*gap: var(--appui-alias-control-gap-sm);*/
}

.appui-actiongroup--vertical {
    flex-direction: column;
    flex-grow: 0;
}

.appui-actiongroup--compact {
    /*gap: 0;*/
}

.appui-actiongroup--compact .appui-actiongroup__inbetween-item {
    border-top-right-radius: 0; /*border-start-end-radius: 0;*/
    border-bottom-right-radius: 0; /*border-end-end-radius: 0;*/
    border-bottom-left-radius: 0; /*border-end-start-radius: 0;*/
    border-top-left-radius: 0; /*border-start-start-radius: 0;*/
}

.appui-actiongroup--compact .appui-actiongroup__item.unity-first-child /* *:first-child */ {
    border-top-left-radius: var(--appui-alias-control-border-radius); /*border-start-start-radius: var(--appui-alias-control-border-radius);*/
    border-top-right-radius: 0; /*border-start-end-radius: 0;*/
    border-bottom-right-radius: 0; /*border-end-end-radius: 0;*/
    border-bottom-left-radius: var(--appui-alias-control-border-radius); /*border-end-start-radius: var(--appui-alias-control-border-radius);*/
    border-right-width: 0; /*border-inline-end-width: 0;*/
    border-bottom-width: var(--appui-alias-control-border-width); /*border-block-end-width: var(--appui-alias-control-border-width);*/
}

.appui-actiongroup--compact.appui-actiongroup--vertical .appui-actiongroup__item.unity-first-child /* *:first-child */ {
    border-top-left-radius: var(--appui-alias-control-border-radius); /*border-start-start-radius: var(--appui-control-border-radius);*/
    border-top-right-radius: var(--appui-alias-control-border-radius); /*border-start-end-radius: var(--appui-control-border-radius);*/
    border-bottom-right-radius: 0; /*border-end-end-radius: 0;*/
    border-bottom-left-radius: 0; /*border-end-start-radius: 0;*/
    border-right-width: var(--appui-alias-control-border-width); /*border-inline-end-width: var(--appui-alias-control-border-width);*/
    border-bottom-width: 0; /*border-block-end-width: 0;*/
}

.appui-actiongroup--compact .appui-actiongroup__item.unity-last-child /* *:last-child */ {
    border-top-left-radius: 0; /*border-start-start-radius: 0;*/
    border-top-right-radius: var(--appui-alias-control-border-radius); /*border-start-end-radius: var(--appui-alias-control-border-radius);*/
    border-bottom-left-radius: 0; /*border-end-start-radius: 0;*/
    border-bottom-right-radius: var(--appui-alias-control-border-radius); /*border-end-end-radius: var(--appui-alias-control-border-radius);*/
    border-left-width: 0; /*border-inline-start-width: 0;*/
    border-top-width: var(--appui-alias-control-border-width); /*border-block-start-width: var(--appui-alias-control-border-width);*/
}

.appui-actiongroup--compact.appui-actiongroup--vertical .appui-actiongroup__item.unity-last-child /* *:last-child */ {
    border-top-left-radius: 0; /*border-start-start-radius: 0;*/
    border-top-right-radius: 0; /*border-start-end-radius: 0;*/
    border-bottom-left-radius: var(--appui-alias-control-border-radius); /*border-end-start-radius: var(--appui-alias-control-border-radius);*/
    border-bottom-right-radius: var(--appui-alias-control-border-radius); /*border-end-end-radius: var(--appui-alias-control-border-radius);*/
    border-left-width: var(--appui-alias-control-border-width); /*border-inline-start-width: var(--appui-alias-control-border-width);*/
    border-top-width: 0; /*border-block-start-width: 0;*/
}

.appui-actiongroup .appui-actiongroup__item.unity-first-child.unity-last-child /* *:first-child:last-child */ {
    border-radius: var(--appui-alias-control-border-radius);
    border-width: var(--appui-alias-control-border-width);
}

.appui-actiongroup__item {
    flex-shrink: 0;
    flex-grow: 0;
    align-self: stretch;
    margin-right: var(--appui-alias-control-gap-md); /* todo remove when gap property will be supported */
    margin-bottom: 0; /* todo remove when gap property will be supported */
}

.appui-actiongroup--justified .appui-actiongroup__item {
    flex-grow: 1;
}

.appui-actiongroup--vertical .appui-actiongroup__item {
    margin-right: 0; /* todo remove when gap property will be supported */
    margin-bottom: var(--appui-alias-control-gap-md); /* todo remove when gap property will be supported */
}

.appui-actiongroup--compact .appui-actiongroup__item {
    margin-right: 0; /* todo remove when gap property will be supported */
    margin-bottom: 0; /* todo remove when gap property will be supported */
}
