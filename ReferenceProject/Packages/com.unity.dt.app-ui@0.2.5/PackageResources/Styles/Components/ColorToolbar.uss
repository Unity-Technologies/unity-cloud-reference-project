/* ColorToolbar */
.appui-colortoolbar {
    display: flex;
    flex-direction: row;
    align-items: stretch;
    justify-content: space-between;
    flex-shrink: 0;
}

.appui-colortoolbar__eyedropper {
    display: flex;
}

.appui-colortoolbar__swatchcontainer {
    display: flex;
    flex-direction: row;
    align-items: stretch;
    flex-shrink: 0;
}

.appui-colortoolbar__previouscolorswatch {
    display: flex;
    width: 40px;
    height: 100%;
    flex-shrink: 0;
    border-bottom-right-radius: 0;
    border-top-right-radius: 0;
}

.appui-colortoolbar__currentcolorswatch {
    display: flex;
    width: 40px;
    height: 100%;
    flex-shrink: 0;
    border-bottom-left-radius: 0;
    border-top-left-radius: 0;
}
